import pandas as pd

input_file_path = 'your_file.csv' # <--- Put your exact filename here

try:
    # Load the file
    df = pd.read_csv(input_file_path)
    
    print("--- DIAGNOSTIC REPORT ---")
    print(f"Total Rows: {len(df)}")
    print("\nColumn Names found:", list(df.columns))
    
    # Check 'content_after_phrase'
    if 'content_after_phrase' in df.columns:
        sample = df['content_after_phrase'].head(5).tolist()
        print(f"\nFirst 5 rows of 'content_after_phrase': {sample}")
        
        null_count = df['content_after_phrase'].isnull().sum()
        print(f"Number of empty rows in 'content_after_phrase': {null_count}")
        
        if null_count == len(df):
            print("\n!!! CRITICAL ISSUE: 'content_after_phrase' IS COMPLETELY EMPTY !!!")
            print("Recommendation: You should probably use the 'body' column instead.")
            
    # Check 'body' just in case
    if 'body' in df.columns:
        sample_body = df['body'].head(3).tolist()
        print(f"\nFirst 3 rows of 'body' column: {sample_body}")

except Exception as e:
    print(f"Error reading file: {e}")
